<view class="page-container">
  
  <view class="custom-header">
    <view class="header-content">
      <text class="header-title">设置界面</text>
    </view>
  </view>

  <scroll-view scroll-y class="scroll-content">
    
    <view class="section-card user-card">
      <view class="user-info">
        <view class="avatar-placeholder">
          <t-icon name="user" size="50rpx" color="#ff9800" />
        </view>
        <view class="user-text">
          <view class="user-name">美食爱好者</view>
          <view class="user-desc">Lv.8 | 南京市</view>
        </view>
      </view>
      <view class="mini-logout-btn" bindtap="onLogout">退出登录</view>
    </view>

    <view class="section-group">
      <view class="group-header">
        <view class="group-title-left">
          <t-icon name="secrity" size="40rpx" color="#ff9800" />
          <text class="group-title-text">账号与安全</text>
        </view>
        <t-icon name="chevron-right" size="40rpx" color="#ccc" />
      </view>
      
      <view class="setting-item">
        <view class="item-left">
          <t-icon name="mobile" size="40rpx" color="#9ca3af" />
          <text class="item-label">手机号</text>
        </view>
        <view class="item-right">
          <text class="item-value">138****8888</text>
          <t-icon name="edit" size="32rpx" color="#ff9800" />
        </view>
      </view>

      <view class="setting-item">
        <view class="item-left">
          <t-icon name="lock-on" size="40rpx" color="#9ca3af" />
          <text class="item-label">密码</text>
        </view>
        <view class="item-right">
          <text class="item-value">••••••••</text>
          <t-icon name="edit" size="32rpx" color="#ff9800" />
        </view>
      </view>

      <view class="setting-item no-border">
        <view class="item-left">
          <t-icon name="logo-wechat" size="40rpx" color="#9ca3af" />
          <text class="item-label">微信绑定</text>
        </view>
        <view class="item-right">
          <text class="item-value green">已绑定</text>
          <t-icon name="check-circle" size="32rpx" color="#9ca3af" />
        </view>
      </view>
    </view>

    <view class="section-group">
      <view class="group-header">
        <view class="group-title-left">
          <t-icon name="notification" size="40rpx" color="#2196f3" />
          <text class="group-title-text">通知设置</text>
        </view>
        <t-icon name="chevron-right" size="40rpx" color="#ccc" />
      </view>

      <view class="setting-item">
        <view class="item-left">
          <t-icon name="shop" size="40rpx" color="#9ca3af" />
          <text class="item-label">新商家推荐</text>
        </view>
        <view class="toggle-switch {{settings.newMerchant ? 'active' : ''}}" bindtap="toggleSetting" data-key="newMerchant">
          <view class="toggle-circle"></view>
        </view>
      </view>

      <view class="setting-item">
        <view class="item-left">
          <t-icon name="heart" size="40rpx" color="#9ca3af" />
          <text class="item-label">收藏更新</text>
        </view>
        <view class="toggle-switch {{settings.favUpdate ? 'active' : ''}}" bindtap="toggleSetting" data-key="favUpdate">
          <view class="toggle-circle"></view>
        </view>
      </view>

      <view class="setting-item no-border">
        <view class="item-left">
          <t-icon name="chat" size="40rpx" color="#9ca3af" />
          <text class="item-label">评论回复</text>
        </view>
        <view class="toggle-switch {{settings.reply ? 'active' : ''}}" bindtap="toggleSetting" data-key="reply">
          <view class="toggle-circle"></view>
        </view>
      </view>
    </view>

    <view class="section-group">
      <view class="group-header">
        <view class="group-title-left">
          <t-icon name="server" size="40rpx" color="#9c27b0" />
          <text class="group-title-text">缓存与存储</text>
        </view>
        <t-icon name="chevron-right" size="40rpx" color="#ccc" />
      </view>
      
      <view class="setting-item no-border" bindtap="onClearCache">
        <view class="item-left">
          <t-icon name="delete" size="40rpx" color="#9ca3af" />
          <text class="item-label">清除缓存</text>
        </view>
        <text class="item-value">128.5MB</text>
      </view>
    </view>

    <view class="section-group">
      <view class="group-header no-border">
        <view class="group-title-left">
          <t-icon name="secured" size="40rpx" color="#4caf50" />
          <text class="group-title-text">隐私设置</text>
        </view>
        <t-icon name="chevron-right" size="40rpx" color="#ccc" />
      </view>
    </view>

    <view class="section-group">
      <view class="group-header no-border">
        <view class="group-title-left">
          <t-icon name="info-circle" size="40rpx" color="#2196f3" />
          <text class="group-title-text">关于我们</text>
        </view>
        <t-icon name="chevron-right" size="40rpx" color="#ccc" />
      </view>
    </view>

    <view class="footer-area">
      <button class="logout-btn" bindtap="onLogout">退出登录</button>
    </view>

    <view style="height: 140rpx;"></view>
  </scroll-view>

  <view class="tab-bar">
    <view class="tab-item" bindtap="switchTab" data-tab="explore">
      <t-icon name="compass" size="48rpx" />
      <text class="tab-text">探索</text>
    </view>
    <view class="tab-item" bindtap="switchTab" data-tab="social">
      <t-icon name="usergroup" size="48rpx" />
      <text class="tab-text">社媒</text>
    </view>
    <view class="tab-item" bindtap="switchTab" data-tab="collection">
      <t-icon name="heart" size="48rpx" />
      <text class="tab-text">收藏</text>
    </view>
    <view class="tab-item active" bindtap="switchTab" data-tab="settings">
      <t-icon name="setting" size="48rpx" />
      <text class="tab-text">设置</text>
    </view>
  </view>
</view>