/** pages/custom/diner_explore/index.wxss */

/* --- 全局布局 --- */
page {
  height: auto; 
  min-height: 100vh;
  background-color: #f5f5f5;
  font-family: "Songti SC", "SimSun", "STSong", "serif";
}

.page-container {
  height: 100%;
  display: block; 
  position: relative;
}

/* --- 1. 顶部搜索栏 --- */
.top-bar {
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
  
  position: fixed; 
  top: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box; 
  z-index: 100;
  pointer-events: auto;
}

.search-box {
  flex: 1;
  background-color: #f3f4f6;
  height: 70rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  position: relative;
}

.search-placeholder {
  font-size: 26rpx;
  color: #9ca3af;
  margin-left: 10rpx;
}

/* --- 2. 地图区域 --- */
.map-bg {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 0;
}

.ui-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  pointer-events: none; /* 让点击穿透到地图 */
}

.map-controls {
  position: absolute;
  top: 240rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 10;
  pointer-events: auto;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

/* --- 悬浮卡片 (Popup Card) --- */
/* 【关键修复1】移除了 opacity: 0，确保只要渲染就一定可见 */
.shop-popup-card {
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 36vh;        
  
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.15);
  z-index: 999; /* 提高层级，确保在最上层 */
  
  pointer-events: auto; /* 恢复点击 */
  
  display: flex;
  align-items: center;
}

.popup-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(255,255,255,0.9);
  flex-shrink: 0;
}

.popup-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100rpx;
  overflow: hidden;
}

.popup-header { display: flex; align-items: center; }

.popup-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.popup-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  margin-top: 4rpx;
}

.popup-score { color: #ff9800; font-weight: bold; }
.popup-price { color: #666; }

.popup-tags {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999;
  margin-top: auto;
}

.popup-tag {
  background: #f3f4f6;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  color: #666;
}

.popup-arrow { padding-left: 10rpx; }


/* --- 3. 底部面板 --- */
.bottom-sheet {
  background-color: white;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  padding: 30rpx 30rpx 0 30rpx;
  box-shadow: 0 -5rpx 20rpx rgba(0,0,0,0.05);
  position: relative;
  z-index: 1;
  margin-top: 65vh;
  min-height: 100vh; 
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
  display: flex;
  flex-direction: column;
  pointer-events: auto;
}

.filter-scroll {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  flex-shrink: 0;
  margin-bottom: 20rpx;
  position: sticky;
  top: 0;
  z-index: 50; 
  background-color: white; 
  margin-left: -30rpx;
  margin-right: -30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 10rpx;
}

.filter-scroll::-webkit-scrollbar { display: none; width: 0; height: 0; color: transparent; }

.filter-tag {
  padding: 12rpx 30rpx;
  background-color: #f3f4f6;
  color: #4b5563;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  margin-right: 20rpx;
  white-space: nowrap;
  display: inline-flex;
  align-items: center;
  transition: all 0.3s;
}

.filter-tag.active {
  background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%);
  color: white;
  box-shadow: 0 4rpx 10rpx rgba(255, 152, 0, 0.3);
}

.restaurant-list { height: auto; }

.restaurant-card {
  background-color: white;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  margin-bottom: 30rpx;
  overflow: hidden;
  border: 1px solid #f3f4f6;
}

.card-content { display: flex; padding: 24rpx; }
.card-image { 
  width: 160rpx; height: 160rpx;
  border-radius: 16rpx;
  margin-right: 24rpx; flex-shrink: 0; 
}
.card-info { flex: 1; display: flex; flex-direction: column; justify-content: space-between; }
.shop-name { font-size: 32rpx; font-weight: bold; color: #333; }
.shop-rating-row { display: flex; align-items: center; font-size: 24rpx; margin-top: 8rpx; }
.rating-num { font-weight: bold; color: #333; margin-left: 8rpx; }
.divider { margin: 0 10rpx; color: #ccc; }
.tag-text { color: #666; }
.shop-location-row { display: flex; align-items: center; font-size: 24rpx; color: #666; margin-top: 8rpx; }
.location-text { margin-left: 8rpx; }
.shop-price-row { display: flex; justify-content: space-between; align-items: flex-end; margin-top: 10rpx; }
.price-text { color: #ff9800; font-weight: 600; font-size: 28rpx; }
.distance-text { font-size: 22rpx; color: #999; }
.card-actions { 
  background-color: #f9fafb;
  padding: 16rpx 24rpx; display: flex; justify-content: flex-end; gap: 30rpx; 
}
.action-btn { display: flex; align-items: center; }

/* --- 4. 底部导航栏 --- */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background-color: white;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 100;
  pointer-events: auto;
}

.tab-item { flex: 1; display: flex; flex-direction: column; align-items: center; justify-content: center; color: #9ca3af; transition: all 0.3s; }
.tab-item.active { color: #ff9800; }
.tab-text { font-size: 20rpx; margin-top: 6rpx; }