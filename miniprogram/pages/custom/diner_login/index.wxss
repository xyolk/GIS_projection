/** pages/custom/login/index.wxss */

/* 1. Page 作为背景层和 Flex 容器 */
page {
  height: 100vh;
  overflow: hidden;
  /* 背景渐变 */
  background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%);
  font-family: "Songti SC", "SimSun", "STSong", "serif";
  
  /* 关键：让白色卡片在屏幕正中间 */
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 2. 核心：白色悬浮卡片 (对应 HTML 中的 bg-white rounded-3xl) */
.login-container {
  background-color: #ffffff;
  width: 85%;            /* 卡片宽度 */
  max-width: 600rpx;     /* 最大宽度限制 */
  border-radius: 48rpx;  /* 大圆角 rounded-3xl */
  padding: 60rpx 40rpx;  /* 内部留白 */
  box-sizing: border-box;
  
  /* 悬浮阴影 shadow-2xl */
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.2);
  
  position: relative; /* 为了放绝对定位的返回按钮 */
  display: flex;
  flex-direction: column;
}

/* 3. 返回按钮 (卡片左上角) */
.back-button {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  padding: 10rpx;
  color: #e65100; /* 深橙色文字 */
  font-size: 32rpx; /* 如果是用图标字体，调整这里 */
  z-index: 10;
}

/* 4. 头部区域 */
.login-header {
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
}

/* 大图标占位符 (对应 text-8xl) */
.header-icon-wrapper {
  margin-bottom: 30rpx;
}
.header-icon {
  font-size: 100rpx; /* 模拟大图标 */
  color: #000000;
}

.login-title {
  font-size: 40rpx; /* text-3xl */
  font-weight: bold;
  color: #1f2937;   /* gray-800 */
  margin-bottom: 10rpx;
}

.login-subtitle {
  font-size: 26rpx;
  color: #6b7280;   /* gray-500 */
}

/* 5. 表单区域 */
.login-form {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 30rpx; /* space-y-6 */
}

/* 输入框组 */
.input-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.input-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #374151; /* gray-700 */
  margin-left: 10rpx;
}

/* 输入框外壳 (对应 input 标签的样式) */
.input-wrapper {
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  background-color: #ffffff;
  border: 2rpx solid #d1d5db; /* gray-300 边框 */
  border-radius: 24rpx;       /* rounded-2xl */
  padding: 0 24rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

/* 聚焦态模拟 (可选) */
.input-wrapper:hover {
  border-color: #ff9800;
}

.input-icon {
  margin-right: 20rpx;
  color: #9ca3af; /* gray-400 */
}

.login-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

/* 6. 按钮样式 (完全复刻 HTML) */
.login-button {
  margin-top: 20rpx;
  width: 100% !important;
  height: 90rpx !important;
  line-height: 90rpx !important;
  border-radius: 24rpx !important; /* rounded-2xl */
  font-size: 32rpx !important;
  font-weight: 600 !important;
  color: white !important;
  border: none !important;
  
  /* 橙色渐变 btn-primary */
  background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%) !important;
  box-shadow: 0 10rpx 20rpx rgba(245, 124, 0, 0.3);
}

.login-button:active {
  transform: scale(0.98);
}

/* 分割线 */
.divider-wrapper {
  position: relative;
  height: 40rpx;
  margin: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.divider-line {
  position: absolute;
  width: 100%;
  height: 1px;
  background-color: #e5e7eb; /* gray-200 */
  z-index: 1;
}
.divider-text {
  position: relative;
  z-index: 2;
  background-color: #fff;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #6b7280;
}

/* 微信按钮 */
.wechat-button {
  width: 100% !important;
  height: 90rpx !important;
  line-height: 90rpx !important;
  border-radius: 24rpx !important;
  font-size: 30rpx !important;
  font-weight: 600 !important;
  color: white !important;
  border: none !important;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  
  /* 绿色渐变 btn-wechat */
  background: linear-gradient(135deg, #07c160 0%, #069e50 100%) !important;
  box-shadow: 0 10rpx 20rpx rgba(7, 193, 96, 0.3);
}

/* 底部链接 */
.bottom-links {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.forgot-password {
  font-size: 24rpx;
  color: #f57c00;
}
.register-link {
  font-size: 26rpx;
  color: #6b7280;
}
.register-btn-text {
  color: #f57c00;
  font-weight: bold;
  margin-left: 10rpx;
}