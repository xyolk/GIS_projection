<view class="login-container">
  
  <view class="back-button" bindtap="goBack">
    <t-icon name="chevron-left" size="48rpx" color="#e65100" />
  </view>

  <view class="login-header">
    <view class="login-header">
    <view class="header-icon-wrapper">
      <t-icon name="restaurant" size="100rpx" color="#ff9800" />
    </view>
    <view class="login-title">食客登录</view>
    <view class="login-subtitle">欢迎回到寻味金陵</view>
  </view>
  </view>

  <view class="login-form">
    
    <view class="input-item">
      <text class="input-label">手机号</text>
      <view class="input-wrapper">
        <t-icon name="mobile" size="40rpx" color="#9ca3af" class="input-icon" />
        <input 
          class="login-input" 
          type="number" 
          placeholder="请输入手机号" 
          placeholder-class="input-placeholder"
          maxlength="11"
          data-field="phone" 
          bindinput="onInput"
        />
      </view>
    </view>

    <view class="input-item">
      <text class="input-label">密码</text>
      <view class="input-wrapper">
        <t-icon name="lock-on" size="40rpx" color="#9ca3af" class="input-icon" />
        <input 
          class="login-input" 
          password 
          placeholder="请输入密码" 
          placeholder-class="input-placeholder"
          data-field="password"
          bindinput="onInput"
        />
      </view>
    </view>

    <button class="login-button" bindtap="onLogin">
      登录
    </button>

    <view class="divider-wrapper">
      <view class="divider-line"></view>
      <text class="divider-text">或使用其他方式登录</text>
    </view>

    <button class="wechat-button" bindtap="onWechatLogin">
      <t-icon name="logo-wechat" size="44rpx" color="#fff" />
      <text style="margin-left: 10rpx;">微信一键登录</text>
    </button>

  </view>

  <view class="bottom-links">
    <text class="forgot-password" bindtap="onForgotPassword">忘记密码？</text>
    
    <view class="register-link">
      <text class="register-text">还没有账号？</text>
      <text class="register-btn-text" bindtap="goToRegister">立即注册</text>
    </view>
  </view>
</view>