/** pages/custom/diner_social/index.wxss */
page {
  height: 100vh;
  background-color: #f5f5f5;
  font-family: "Songti SC", "SimSun", "STSong", "serif";
  overflow: hidden;
}

.page-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.custom-nav-bar {
  background-color: white;
  height: 80rpx;

  box-sizing: content-box; 
  
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
  z-index: 10; /* 保证层级最高 */

  /* flex-shrink: 0 防止被挤压 */
  flex-shrink: 0; 
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
}

/* 滚动区域 */
.scroll-content {
  flex: 1;
  width: 100%;
  /* 垂直滚动 */
  overflow-y: auto; 
  -webkit-overflow-scrolling: touch; 
  
  /* 防止最底部的内容（如菜单列表）被 fixed 定位的 TabBar 遮挡 */
  padding-bottom: calc(130rpx + env(safe-area-inset-bottom));
}

/* 隐藏滚动条 (可选优化，让界面更像原生 App) */
.scroll-content::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

/* 用户卡片 */
.profile-card {
  /* 1. 布局与间距：恢复正常边距，添加内边距 */
  margin: 30rpx; /* 上下左右都有边距 */
  padding: 40rpx 30rpx; /* 卡片内部留白，让内容不顶边 */
  
  /* 2. 背景装饰：原 header-bg 的效果移到这里 */
  background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%); /* 稍微提亮一点橙色 */
  border-radius: 32rpx; /* 完整的圆角矩形 */
  
  /* 3. 视觉优化 */
  box-shadow: 0 8rpx 20rpx rgba(245, 124, 0, 0.25); 
  color: white; 
}

.profile-layout {
  display: flex;
  align-items: center;
}

.avatar-wrapper {
  width: 140rpx;
  height: 140rpx;
  background-color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 6rpx solid rgba(255,255,255,0.4); 
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

.profile-info {
  margin-left: 30rpx;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 10rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
}

.level-tag {
  background-color: #fdd835;
  color: #333;
  font-size: 20rpx;
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.location-row {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  opacity: 0.9;
  gap: 8rpx;
}

/* 功能网格 */
.function-grid {
  background-color: white;
  margin: 0 30rpx 20rpx 30rpx;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.grid-row {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  transition: all 0.3s;
}
.icon-circle:active { transform: scale(0.95); }

/* 图标背景色 */
.bg-orange { background-color: #fff3e0; }
.bg-blue { background-color: #e3f2fd; }
.bg-green { background-color: #e8f5e9; }
.bg-purple { background-color: #f3e5f5; }

.grid-text {
  font-size: 24rpx;
  color: #666;
}

.edit-btn {
  width: 100% !important;
  background-color: white !important;
  color: #ff9800 !important;
  border: 1px solid #ffcc80 !important;
  border-radius: 40rpx !important;
  font-size: 28rpx;
  padding: 10rpx 0;
}

/* 通用卡片样式 */
.section-card {
  background-color: white;
  margin: 0 30rpx 20rpx 30rpx;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.no-padding { padding: 0; overflow: hidden; }

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #ff9800;
}

/* 最近浏览 */
.recent-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.recent-item {
  background-color: #f9fafb;
  padding: 20rpx;
  border-radius: 16rpx;
}

.recent-img {
  width: 100%;
  height: 160rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}
.bg-orange-light { background-color: #ffe0b2; }
.bg-teal-light { background-color: #b2dfdb; }
.bg-red-light { background-color: #ffcdd2; }
.bg-yellow-light { background-color: #fff9c4; }

.recent-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 6rpx;
}

.recent-rating {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #666;
}

/* 口味分析进度条 */
.progress-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.progress-label {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}
.progress-val { color: #333; font-weight: bold; }

.progress-track {
  width: 100%;
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background-color: #ff9800;
  border-radius: 8rpx;
}

/* 我的动态 */
.card-header-border {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  border-bottom: 1px solid #f0f0f0;
}

.feed-content { padding: 30rpx; }

.feed-row { display: flex; gap: 20rpx; }

.feed-avatar {
  width: 80rpx;
  height: 80rpx;
  background-color: #fff3e0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.feed-main { flex: 1; }

.feed-user { font-size: 28rpx; font-weight: bold; color: #333; }

.feed-text { font-size: 26rpx; color: #666; margin: 8rpx 0; line-height: 1.4; }

.feed-images {
  display: flex;
  gap: 10rpx;
  margin-top: 10rpx;
}

.feed-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
}

.feed-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
  font-size: 22rpx;
  color: #999;
}
.ml-2 { margin-left: 20rpx; }

/* 菜单列表 */
.menu-list {
  background-color: white;
  margin: 10rpx 30rpx;
  border-radius: 24rpx;
  padding: 10rpx 30rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #f5f5f5;
}
.menu-item:last-child { border-bottom: none; }

.menu-left { display: flex; align-items: center; gap: 20rpx; }
.menu-text { font-size: 28rpx; font-weight: 500; color: #333; }

/* 底部 TabBar */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background-color: white;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 100;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #9ca3af;
}

.tab-item.active {
  color: #ff9800;
}

.tab-text {
  font-size: 20rpx;
  margin-top: 6rpx;
}