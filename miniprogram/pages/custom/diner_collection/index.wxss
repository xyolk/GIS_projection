/** pages/custom/diner_collections/index.wxss */

/* 1. 页面基础设置：占满屏幕，禁止页面级滚动 */
page {
  height: 100vh;
  overflow: hidden;
  background-color: #f5f5f5;
  font-family: "Songti SC", "SimSun", "STSong", "serif";
}

.page-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 2. 顶部导航：固定不动 */
.custom-header {
  background-color: white;
  height: 80rpx;

  box-sizing: content-box; 
  
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
  z-index: 10; /* 保证层级最高 */

  /* flex-shrink: 0 防止被挤压 */
  flex-shrink: 0; 
}

.header-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.create-btn {
  width: 70rpx;
  height: 70rpx;
  background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(255, 152, 0, 0.4);
}
.create-btn:active { transform: scale(0.95); }

/* 3. 主内容区域：滑动显示 */
.main-content {
  flex: 1; /* 关键：自动占据剩余所有高度 */
  height: 0; /* 配合 flex:1 使用，强制约束高度防止溢出 */
  width: 100%;
  position: relative;
}

/* 隐藏 scroll-view 的滚动条 (美观优化) */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

/* 内容卡片容器 */
.section-group {
  margin-top: 30rpx;
  padding-left: 30rpx;
  background-color: white;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.mb-large { margin-bottom: 30rpx; }

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 横向滚动容器 */
.horizontal-scroll {
  display: flex;
  flex-direction: row;
  height: auto;
  white-space: nowrap;
  padding-right: 30rpx; 
  width: 100%; 
  box-sizing: border-box; 
}

/* 卡片通用样式 */
.collection-card {
  display: inline-block;
  width: 280rpx; 
  background-color: white;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  overflow: hidden;
  margin-right: 24rpx;     /* 卡片间距 */
  transition: all 0.3s;
  vertical-align: top;
  /* 确保不被挤压 */
  flex-shrink: 0;
}

.card-img {
  width: 100%;
  height: 240rpx;
  background-size: cover;
  background-position: center;
}

.card-body {
  padding: 20rpx;
}
.center { text-align: center; }

.card-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}
.truncate {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-desc {
  font-size: 22rpx;
  color: #666;
}

.card-user {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  font-size: 22rpx;
  color: #999;
}

.user-avatar-small {
  width: 32rpx;
  height: 32rpx;
  background-color: #eee;
  border-radius: 50%;
  margin-right: 10rpx;
}

.my-card-icon {
  width: 100%;
  height: 240rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 添加按钮卡片 */
.add-card {
  width: 280rpx; 
  min-height: 360rpx; 
  
  background-color: #f9fafb;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  vertical-align: top;
  border: 2rpx dashed #e5e7eb; 
  box-sizing: border-box; 
  height: auto; 
}

.add-icon-circle {
  width: 100rpx;
  height: 100rpx;
  background-color: #e5e7eb;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.add-text {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 颜色工具类 */
.bg-orange-100 { background-color: #ffe0b2; }
.bg-teal-100 { background-color: #b2dfdb; }
.bg-red-100 { background-color: #ffcdd2; }
.bg-purple-100 { background-color: #e1bee7; }
.bg-blue-100 { background-color: #bbdefb; }
.bg-green-100 { background-color: #c8e6c9; }
.bg-yellow-100 { background-color: #fff9c4; }
.bg-pink-100 { background-color: #f8bbd0; }

/* 模态框 (Modal) - 确保在最上层 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999; /* 极高层级 */
  backdrop-filter: blur(4px);
}

.modal-content {
  width: 600rpx;
  background-color: white;
  border-radius: 32rpx;
  padding: 40rpx;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { transform: translateY(50px); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-item { margin-bottom: 30rpx; }

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-box {
  width: 100%;
  height: 80rpx;
  border: 1px solid #e5e7eb;
  border-radius: 16rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.textarea-box {
  width: 100%;
  border: 1px solid #e5e7eb;
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  min-height: 150rpx;
}

.privacy-options {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.p-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  border: 1px solid #e5e7eb;
  border-radius: 16rpx;
  color: #666;
  font-size: 28rpx;
  gap: 10rpx;
}

.p-btn.active {
  background-color: #ff9800;
  color: white;
  border-color: #ff9800;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.cancel-btn {
  flex: 1;
  background-color: white;
  border: 1px solid #e5e7eb;
  color: #666;
  border-radius: 16rpx;
}

.confirm-btn {
  flex: 1;
  background-color: #ff9800;
  color: white;
  border-radius: 16rpx;
}

/* 4. 底部导航栏：固定不动 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background-color: white;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 50;
  /* 确保不遮挡内容 */
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #9ca3af;
}

.tab-item.active {
  color: #ff9800;
}

.tab-text {
  font-size: 20rpx;
  margin-top: 6rpx;
}