/* pages/review_detail/index.wxss */
page {
  background-color: #fff;
  --theme-orange: #ff9800;
  --link-color: #576b95; /* 微信经典蓝 */
  --link-orange: #d87a00; /* 适配主题的深橙色链接 */
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.main-scroll {
  flex: 1;
}

.content-wrapper {
  padding: 30rpx 24rpx;
}

/* 楼主布局 */
.post-layout {
  display: flex;
  align-items: flex-start;
}

.avatar-left {
  flex-shrink: 0;
  margin-right: 20rpx;
}

.post-right {
  flex: 1;
}

.author-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--link-orange);
  margin-bottom: 8rpx;
}

.post-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

/* 图片宫格 */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}
.post-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
}
.post-img.single {
  width: 360rpx;
  height: auto;
  max-height: 400rpx;
}

.post-meta {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.time {
  font-size: 24rpx;
  color: #999;
}

/* 朋友圈气泡盒子 (核心) */
.moments-box {
  background-color: #f7f7f7;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  position: relative;
  font-size: 28rpx;
}

.arrow-up {
  position: absolute;
  top: -12rpx;
  left: 20rpx;
  width: 0; 
  height: 0; 
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 12rpx solid #f7f7f7;
}

.likes-section {
  display: flex;
  align-items: flex-start;
  color: var(--link-orange);
  font-weight: 500;
  line-height: 1.5;
}
.like-icon-small {
  margin-top: 6rpx;
  margin-right: 10rpx;
}
.likes-list {
  flex: 1;
  word-break: break-all;
}

.divider-line {
  height: 1rpx;
  background-color: #e0e0e0;
  margin: 10rpx 0;
}

.comments-section {
  display: flex;
  flex-direction: column;
}

.comment-row {
  margin-bottom: 6rpx;
  line-height: 1.5;
}

.user-link {
  color: var(--link-orange);
  font-weight: 500;
}
.text-normal {
  color: #333;
}

/* 底部输入栏 */
.footer-input-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  background: #f9f9f9;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 100;
}

.input-wrap {
  flex: 1;             /* 撑满剩余空间 */
  background: #fff;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  margin-right: 24rpx; /* 与发送按钮的间距 */
}

.wechat-input {
  width: 100%;
  font-size: 28rpx;
}
.ph-style {
  color: #ccc;
}

/* Loading */
.loading-full {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* --- 新增：橙色按钮样式覆盖 --- */
.orange-btn {
  background-color: #ff9800 !important;
  color: #fff !important;
  border: 0 !important;
  outline: none !important;
  border-radius: 32rpx !important;
  flex-shrink: 0;
}

.orange-btn::after {
  border: none !important;
  display: none !important;
}

/* 禁用状态下的样式 (浅橙色) */
.orange-btn.t-is-disabled {
  background-color: #ffd180 !important;
  border-color: #ffd180 !important;
  color: #fff !important;
  opacity: 0.8;
}