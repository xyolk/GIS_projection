/* pages/navigation_record/index.wxss */
page {
  background-color: #f6f6f6;
  --theme-orange: #ff9800;
  --theme-green: #4caf50;
}

.container {
  padding-bottom: 40rpx;
}

.nav-list {
  padding: 24rpx;
}

/* 卡片容器 */
.nav-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.03);
}

/* 头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
}
.time-tag {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
  gap: 8rpx;
}
.transport-badge {
  display: flex;
  align-items: center;
  background: #fff3e0; /* 浅橙色背景 */
  padding: 4rpx 16rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  color: var(--theme-orange);
  gap: 6rpx;
  font-weight: bold;
}

/* 虚线分割 */
.divider-dashed {
  height: 1px;
  border-bottom: 2rpx dashed #eee;
  width: 100%;
}

/* 路线主体 */
.route-body {
  display: flex;
  padding: 30rpx 0;
  align-items: stretch;
}

/* 装饰轴 (Start -> End) */
.route-axis {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
  padding-top: 10rpx;
}
.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}
.dot.start {
  background-color: var(--theme-green); /* 起点绿 */
  box-shadow: 0 0 0 4rpx rgba(76, 175, 80, 0.2);
}
.dot.end {
  background-color: var(--theme-orange); /* 终点橙 */
  box-shadow: 0 0 0 4rpx rgba(255, 152, 0, 0.2);
}
.line {
  flex: 1;
  width: 2rpx;
  background-color: #e0e0e0;
  margin: 8rpx 0;
}

/* 地址信息 */
.route-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  gap: 30rpx;
}
.location-row {
  display: flex;
  flex-direction: column;
}
.loc-name {
  font-size: 28rpx;
  color: #333;
}
.loc-name.highlight {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.loc-addr {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 右侧箭头与距离 */
.arrow-area {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  padding-left: 10rpx;
}
.distance-tag {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

/* 侧滑按钮 */
.swipe-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 144rpx;
  height: 100%;
  color: #fff;
  font-size: 28rpx;
}
.delete-btn {
  background-color: #ff4d4f;
  border-top-right-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
}

.footer-tip {
  text-align: center;
  font-size: 22rpx;
  color: #ccc;
  padding-top: 20rpx;
}

.empty-state {
  padding-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty-text {
  color: #ccc;
  margin-top: 20rpx;
  font-size: 28rpx;
}