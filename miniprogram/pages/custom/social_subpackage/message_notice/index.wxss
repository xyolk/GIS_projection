/* pages/message_center/index.wxss */
page {
  background-color: #f6f6f6;
  --theme-orange: #ff9800;
  --theme-orange-light: #fff3e0;
}

.container {
  padding-bottom: 40rpx;
}

/* 顶部栏 */
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 32rpx;
  background-color: #f6f6f6;
  position: sticky;
  top: 0;
  z-index: 10;
}
.header-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}
.clear-btn {
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #fff;
  padding: 10rpx 20rpx;
  border-radius: 32rpx; /* 胶囊圆角 */
}

/* 消息列表 */
.msg-list {
  padding: 0 24rpx;
}

/* 消息卡片 (核心样式) */
.msg-card {
  display: flex;
  align-items: flex-start; /* 顶部对齐 */
  background: #fff;
  padding: 30rpx 24rpx;
  margin-bottom: 20rpx;
  border-radius: 24rpx; /* 大圆角 */
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.02);
  transition: all 0.2s;
}

/* 点击态 */
.msg-card:active {
  background-color: #fafafa;
  transform: scale(0.99);
}

/* 未读状态：可以加个浅色背景或者仅仅保留红点，这里选择加微弱背景 */
.msg-card.unread {
  background: #fff; /* 保持白色，只用红点提示，更清爽 */
}

/* 左侧头像区 */
.avatar-box {
  position: relative;
  margin-right: 24rpx;
  flex-shrink: 0;
}
.dot {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 18rpx;
  height: 18rpx;
  background-color: #ff4d4f;
  border: 2rpx solid #fff;
  border-radius: 50%;
}

/* 中间内容区 */
.content-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 20rpx;
}
.sender-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}
.msg-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 12rpx;
  
  /* 最多显示两行 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.system-text {
  color: var(--theme-orange); /* 系统消息高亮 */
}
.time-str {
  font-size: 22rpx;
  color: #bbb;
}

/* 右侧缩略图/箭头区 */
.target-box {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.target-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
}

/* 侧滑删除按钮 */
.swipe-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 140rpx;
  height: 100%;
  color: #fff;
  font-size: 28rpx;
}
.delete-btn {
  background-color: #ff4d4f; /* 红色删除 */
  border-top-right-radius: 24rpx; /* 适配卡片圆角 */
  border-bottom-right-radius: 24rpx;
}
/* 注意：TDesign 的 swipe-cell slot 样式可能需要特殊调整 */


.loading-more {
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
}
.no-more {
  text-align: center;
  color: #ccc;
  font-size: 24rpx;
  padding: 30rpx 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}
.empty-text {
  color: #ccc;
  font-size: 28rpx;
  margin-top: 20rpx;
}