/* pages/reservation_record/index.wxss */
page {
  background-color: #f6f6f6;
  --theme-orange: #ff9800;
}

.container {
  padding-bottom: 40rpx;
}

.record-list {
  padding: 24rpx;
}

/* 卡片样式 */
.record-card {
  display: flex;
  background: #fff;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 24rpx; /* 圆润风格 */
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.shop-img-box {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
  flex-shrink: 0;
  margin-right: 24rpx;
  background-color: #f0f0f0;
}

.info-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shop-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  margin-left: 8rpx;
}

/* 底部状态区 */
.card-footer {
  display: flex;
  justify-content: space-between; /* 保持左对齐或两端对齐 */
  align-items: center;
  margin-top: 8rpx;
}

/* 文本超长省略 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 侧滑删除按钮 */
.swipe-right-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 144rpx;
  height: 100%;
  font-size: 28rpx;
  color: #fff;
}
.delete-btn {
  background-color: #ff4d4f;
  border-top-right-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
}

/* 底部提示 */
.no-more {
  text-align: center;
  color: #ccc;
  font-size: 22rpx;
  padding: 20rpx 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}
.empty-text {
  color: #999;
  font-size: 28rpx;
  margin: 24rpx 0 40rpx 0;
}

/* 橙色去探索按钮 */
.go-book-btn {
  background-color: var(--theme-orange) !important;
  border: none !important;
  border-radius: 32rpx !important;
  color: #fff !important;
  padding: 0 48rpx !important;
}