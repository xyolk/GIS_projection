/* pages/custom/diner_search_detail/index.wxss */
page {
  height: 100vh;
  background-color: #f5f5f5;
  font-family: "Songti SC", "SimSun", "STSong", "serif";
  display: flex;
  flex-direction: column;
}

.page-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* --- 顶部搜索区 --- */
.search-header {
  background-color: white;
  padding: 20rpx 30rpx 30rpx 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03);
  z-index: 10;
}

.search-bar-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-input-box {
  flex: 1;
  background-color: #f3f4f6; /* bg-gray-100 */
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  position: relative;
  transition: all 0.3s;
}

/* 聚焦时的模拟效果 */
.search-input-box:active {
  background-color: #fff;
  box-shadow: 0 0 0 2rpx #ff9800;
}

.search-icon {
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.placeholder-style {
  color: #9ca3af;
}

.clear-btn {
  padding: 10rpx;
}

/* 快捷定位按钮 */
.quick-location-btn {
  margin-top: 24rpx;
  width: 100%;
  height: 88rpx;
  background-color: white;
  border: 1rpx solid #e5e7eb;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  color: #374151;
  font-size: 28rpx;
  transition: background-color 0.2s;
}

.quick-location-btn:active {
  background-color: #f9fafb;
}

.location-text {
  font-weight: 500;
}

/* --- 主内容区 --- */
.main-content {
  flex: 1;
  height: 0;
  padding: 30rpx;
  box-sizing: border-box;
}

/* --- 历史记录 --- */
.section-group {
  margin-bottom: 50rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.clear-history-btn {
  font-size: 24rpx;
  color: #9ca3af;
  padding: 10rpx;
}

.view-all-btn {
  font-size: 24rpx;
  color: #ff9800;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  padding: 24rpx 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.02);
}

.history-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.history-text {
  font-size: 28rpx;
  color: #4b5563;
}

/* --- 餐厅卡片 (通用) --- */
.restaurant-card {
  background-color: white;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  margin-bottom: 24rpx;
  overflow: hidden;
  transition: transform 0.2s;
}

.restaurant-card:active {
  transform: scale(0.99);
}

.card-content {
  display: flex;
}

.card-image {
  width: 200rpx; /* w-28 roughly */
  height: 200rpx; /* h-28 roughly */
  background-color: #eee;
  flex-shrink: 0;
}

.card-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shop-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #1f2937;
}

.shop-meta-row {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.rating-num {
  font-weight: bold;
  color: #4b5563;
  margin-left: 8rpx;
}

.divider { margin: 0 12rpx; color: #d1d5db; }
.tag-text { color: #6b7280; }

.shop-addr-row {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.addr-text {
  margin-left: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 300rpx;
}

.shop-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.price-text {
  color: #ff9800;
  font-weight: 600;
  font-size: 30rpx;
}

.nav-action-btn {
  display: flex;
  align-items: center;
}

.distance-text {
  font-size: 24rpx;
  color: #9ca3af;
}

.mr-2 { margin-right: 16rpx; }

.nav-icon-circle {
  width: 48rpx;
  height: 48rpx;
  background-color: #ff9800;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(255, 152, 0, 0.3);
}