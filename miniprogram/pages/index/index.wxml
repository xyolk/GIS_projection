<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="header">
      <view class="title">寻味金陵</view>
      <view class="subtitle">发现南京最美味的角落</view>
    </view>

    <view class="identity-cards">
      <view class="identity-card diner" bindtap="navigateToDiner">
        <view class="icon-wrapper diner-icon">
          <image class="icon" src="/miniprogram/images/ic_discovery.png" mode="aspectFit"></image>
        </view>
        <view class="identity-title">我是食客</view>
        <view class="identity-desc">探索美食，发现推荐</view>
        <t-button class="enter-button diner-button" type="primary" size="medium">
          进入食客端
        </t-button>
      </view>

      <view class="identity-card merchant" bindtap="navigateToMerchant">
        <view class="icon-wrapper merchant-icon">
          <image class="icon" src="/miniprogram/images/ic_ranking.png" mode="aspectFit"></image>
        </view>
        <view class="identity-title">我是商家</view>
        <view class="identity-desc">管理店铺，查看数据</view>
        <t-button class="enter-button merchant-button" type="primary" size="medium">
          进入商家端
        </t-button>
      </view>

      <view class="identity-card admin" bindtap="navigateToAdmin">
        <view class="icon-wrapper admin-icon">
          <image class="icon" src="/miniprogram/images/ic_profile.png" mode="aspectFit"></image>
        </view>
        <view class="identity-title">我是管理员</view>
        <view class="identity-desc">系统管理，数据统计</view>
        <t-button class="enter-button admin-button" type="primary" size="medium">
          进入管理端
        </t-button>
      </view>
    </view>
  </view>
</scroll-view>
